<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>ShowController</servlet-name>
		<servlet-class>weibo.controller.ShowController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SportController</servlet-name>
		<servlet-class>weibo.controller.SportController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowController</servlet-name>
		<url-pattern>/news/headline</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SportController</servlet-name>
		<url-pattern>/sports/sport</url-pattern>
	</servlet-mapping>
</web-app>
